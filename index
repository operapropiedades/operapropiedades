  <a class="wa" href="https://wa.me/569XXXXXXXX?text=Hola%20Ópera%20Propiedades,%20necesito%20ayuda%20con%20una%20propiedad" target="_blank" aria-label="WhatsApp">WhatsApp</a>

  <script>
    // Año dinámico
    document.getElementById('y').textContent = new Date().getFullYear();

    // Filtros simples para demo
    const tipo = document.getElementById('tipo');
    const ciudad = document.getElementById('ciudad');
    const q = document.getElementById('q');
    const cards = Array.from(document.querySelectorAll('.listing'));

    const applyFilters = () => {
      const t = tipo.value.toLowerCase();
      const c = ciudad.value.toLowerCase();
      const text = q.value.toLowerCase();
      cards.forEach(card => {
        const okTipo = !t || card.dataset.tipo.toLowerCase()===t;
        const okCiudad = !c || card.dataset.ciudad.toLowerCase()===c;
        const okText = !text || card.dataset.text.includes(text);
        card.style.display = okTipo && okCiudad && okText ? 'flex' : 'none';
      });
    }
    ;['change','keyup'].forEach(evt=>{
      tipo.addEventListener(evt, applyFilters);
      ciudad.addEventListener(evt, applyFilters);
      q.addEventListener(evt, applyFilters);
    });
  </script>
